{
    "name": "synergy/pagebuilder",
    "description": "Generate widgetized pages",
    "license": "BSD-3-Clause",
    "keywords": [
        "page builder",
        "jqgrid",
        "zf2",
        "module",
        "widgets"
    ],
    "homepage": "http://developer.peleodiase.com/synergy-data-grid",
    "authors": [
        {
            "name": "Pele Odiase",
            "email": "peleodiase@yahoo.co.uk"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:odiaseo/synergy-common.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:odiaseo/zf2-datagrid.git"
        }
    ],
    "require": {
        "php": ">=5.5",
        "zendframework/zendframework": "2.*",
        "doctrine/doctrine-orm-module": ">=0.5",
        "doctrine/doctrine-module": ">=0.7",
        "gedmo/doctrine-extensions": "^2.4",
        "synergy/synergydatagrid": "1.0.x-dev",
        "synergy/common": "1.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-0": {
            "PageBuilder": "src/",
            "PageBuilderTest": "tests/module/"
        },
        "classmap": [
            "./Module.php",
            "./tests/module/PageBuilderTest/Module.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
